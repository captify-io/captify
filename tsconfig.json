{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@captify-io/base/ui": ["../base/src/components/ui"],
      "@captify-io/base/ui/*": ["../base/src/components/ui/*"],
      "@captify-io/base/layout": ["../base/src/components/layout"],
      "@captify-io/base/layout/*": ["../base/src/components/layout/*"],
      "@captify-io/base/components/layout/captify-provider": ["../base/src/components/layout/captify-provider.tsx"],
      "@captify-io/base/components/layout/captify-layout": ["../base/src/components/layout/captify-layout.tsx"],
      "@captify-io/base/lib/api": ["../base/src/lib/api.ts"],
      "@captify-io/base/lib/utils": ["../base/src/lib/utils.ts"],
      "@captify-io/base/lib/auth-store": ["../base/src/lib/auth-store.ts"],
      "@captify-io/base/hooks": ["../base/src/hooks"],
      "@captify-io/base/hooks/*": ["../base/src/hooks/*"],
      "@captify-io/base/types": ["../base/src/types"],
      "@captify-io/base/types/*": ["../base/src/types/*"],
      "@captify-io/base/services": ["../base/src/services"],
      "@captify-io/base/services/*": ["../base/src/services/*"],
      "@captify-io/workspace/client": ["../workspace/src/client"],
      "@captify-io/workspace/client/*": ["../workspace/src/client/*"],
      "@captify-io/workspace/server": ["../workspace/src/server"],
      "@captify-io/workspace/server/*": ["../workspace/src/server/*"],
      "@captify-io/ontology": ["../ontology/src"],
      "@captify-io/ontology/*": ["../ontology/src/*"],
      "@captify-io/flow": ["../flow/src"],
      "@captify-io/flow/*": ["../flow/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
